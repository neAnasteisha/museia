@{
    ViewData["Title"] = "Реєстрація";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - museia</title>
    <link rel="stylesheet" href="~/css/register.css" />
</head>
<body>

<div class="container-register">
    <h2 class="text-center">Реєстрація</h2>
    <form method="post" action="/Account/Register" onsubmit="saveFormData()" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label">Ім'я</label>
            <input type="text" class="form-control" name="username" id="username" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email" id="email" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Пароль</label>
            <input type="password" class="form-control" name="password" id="password" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Аватар(необов'язково)</label>
            <input type="file" class="form-control" name="avatar" id="avatar" accept="image/*" />
        </div>

        <div class="mb-3 form-check">
            @* <input type="checkbox" class="form-check-input" id="agreeTerms"> *@
            <label class="form-check-label" for="agreeTerms">
                Реєструючись ви підтверджуєте, що ознайомились із
                <a href="/Post/Rules" onclick="saveFormData()">правилами спільноти</a>
            </label>
        </div>

        <button type="submit" class="btn btn-success w-100">Зареєструватися</button>
    </form>

    <p class="mt-3 text-center">
        Вже маєте акаунт? <a href="/Account/Login">Увійти</a>
    </p>
</div>


</body>
</html>

<script src="~/js/register.js"></script>

