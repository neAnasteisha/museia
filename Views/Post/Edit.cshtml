@model Post
@{
    ViewData["Title"] = "Редагувати пост";
}

<form method="post">
    <div class="container mt-5">
        <h2 class="text-center">📝 Редагувати пост</h2>
        <div class="mb-3">
            <label class="form-label">Опис</label>
            <textarea class="form-control" rows="4" required asp-for="PostText"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Тег</label>
            <select asp-for="PostTag" asp-items="ViewBag.PostTags" class="form-control"></select>
        </div>
        <button type="submit" class="btn btn-success w-100">Зберегти зміни</button>

        <!-- Текстове посилання для повернення на головну -->
        <div class="text-center mt-3">
            <a href="/" class="text-decoration-none">🔙 Вернутись назад</a>
        </div>
    </div>
</form>
