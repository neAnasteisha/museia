@model Post
@{
    ViewData["Title"] = "Редагувати допис";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - museia</title>
    <link rel="stylesheet" href="~/css/edit.css" />
</head>
<body>

<h2>Редагування допису</h2>

    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="PostID" />

        <div class="form-label">
            <label>Опис</label>
            <textarea asp-for="PostText" class="form-control"></textarea>
        </div>

        <div class="form-label">
            <label>Тег</label>
            <select asp-for="PostTag" asp-items="ViewBag.PostTags" class="form-control"></select>
        </div>

        @if (!string.IsNullOrEmpty(Model.PostPhoto))
        {
            <div class="form-label">
                <label>Поточне фото:</label><br />
                <img src="@Model.PostPhoto" style="max-width: 300px;" />
            </div>
        }

        <div class="mb-3">
            <label>Нове фото</label>
            <input type="file" name="photoFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success-changes">Зберегти зміни</button>

        @* <div class="text-center mt-3">
            <a href="" class="text-decoration-none">🔙 Вернутись назад</a>
        </div> *@
    </form>

</body>
</html>

